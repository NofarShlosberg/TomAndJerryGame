<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6E6F0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/background"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/main_background">

            </com.google.android.material.imageview.ShapeableImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="630dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/main_BTN_startgame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#A52A2A"
                android:text="start game"
                android:textSize="35sp">

            </com.google.android.material.button.MaterialButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
           >

            <EditText
                android:id="@+id/main_LBL_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter your name"
                android:textSize="35sp"
                android:layout_marginTop="80dp">

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_marginTop="510dp">

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_BTN_level"
                android:layout_marginStart="25sp"
                android:textOff="easy"
                android:textOn="hard"
                android:textColor="#A52A2A"
                android:backgroundTint="@color/white"
                android:textSize="30sp">

            </ToggleButton>
            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_BTN_mode"
                android:textOff="buttons"
                android:textOn="sensors"
                android:backgroundTint="@color/white"
                android:textColor="#A52A2A"
                android:textSize="30sp">

            </ToggleButton>


        </LinearLayout>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>